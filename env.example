# ============================================
# MAVE CMS - Environment Configuration
# ============================================

# ============================================
# Application
# ============================================
NODE_ENV=development
PORT=7845
APP_URL=http://localhost:7845

# ============================================
# Database (PostgreSQL 18)
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/db_name?schema=public"

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET=your_secret_key_here_change_it
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your_secret_key_here_change_it
JWT_REFRESH_EXPIRATION=30d

# ============================================
# Redis Cache (Optional for local development)
# ============================================
# Uncomment if you have Redis running locally
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_TTL=3600

# ============================================
# Email Configuration
# ============================================
# Enable/disable mailing service (enabled/disabled)
MAILING_SERVICE=enabled
# For development, use Mailtrap: https://mailtrap.io/
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@mave.local
SMTP_FROM_NAME=Mave CMS

# ============================================
# File Storage
# ============================================
STORAGE_DRIVER=local
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# AWS S3 (for production - leave empty for now)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# ============================================
# Rate Limiting
# ============================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=http://localhost:3001,http://localhost:5173,http://localhost:8080,http://localhost:9614

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# ============================================
# Security
# ============================================
SESSION_SECRET=your_secret_key_here_change_it

# ============================================
# Feature Flags
# ============================================
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_SWAGGER=true
ENABLE_API_VERSIONING=true

# ============================================
# Webhooks
# ============================================
WEBHOOK_SECRET=your_secret_key_here_change_it
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=5000

# ============================================
# Development Tools
# ============================================
SHOW_STACK_TRACES=true
LOG_QUERIES=false
